    <div id="search">
        <label for=""><i class="fa fa-search" aria-hidden="true"></i></label>
        <input type="text" placeholder="Search contacts..." id="searchcontact" />
    </div>
    <div id="contacts">
        <ul>
            <% for(var i=0; i < contacts.length; i++) { %>
                <li class="contact <% if (i==0){  %> active <% } %>">
                    <div class="wrap">
                        <span class="contact-status away"></span>
                        <img src="avatar/<%=contacts[i].id%>" alt="" />
                        <div class="meta">
                            <p class="id" style="display:none"><%= contacts[i].id %></p>
                            <p class="name"><%= contacts[i].name %></p>
                            <p class="preview"><%= contacts[i].message %></p>
                        </div>
                    </div>
                </li>
            <% } %>
            
        </ul>
    </div>
    <div id="bottom-bar">
        <button id="addcontact"><i class="fa fa-user-plus fa-fw" aria-hidden="true"></i> <span>Add contact</span></button>
        <button id="settings"><i class="fa fa-cog fa-fw" aria-hidden="true"></i> <span>Settings</span></button>
    </div>
</div>
<div class="content">
        <% if (contacts.length > 0) { %>
    <div class="contact-profile">
        <img src="avatar/<%=contacts[0].id%>" id="recipient_avatar" alt="" />
        <input type="hidden" id="activeuser" value="<%= contacts[0].id %>" />
        <p id="activedisplay"><%= contacts[0].name %></p>
        <!--span id="availability">online</span-->
        
        <div class="social-media">
            <i class="fa fa-trash" aria-hidden="true"></i>
            <i class="fa fa-info-circle" aria-hidden="true"></i>
        </div>
    </div>
    <div class="messages" id="messages">
        <% var lastmsgtime = 0; if (chats.length > 0) { lastmsgtime = chats[0].time;}%>
        <ul class="messageul" id="<%= contacts[0].id %>">
            <% for(var i=chats.length-1; i > -1; i--) { %>
            <li class="<%= chats[i].type %>">
                <img src="avatar/<%=(chats[i].type==='sent')?chats[i].sender:chats[i].recipient%>" alt="" />
                <div>
                    <p class="msg"><%= chats[i].message %></p>
                    <!--p class="time"><%= chats[i].time %></p-->
                </div>
            </li>
            <% } %>
            <input type = "hidden" id="lastmsgtime" value="<%=lastmsgtime%>"/>
        </ul>
    </div>
    <div class="message-input">
        <div id="feedback"></div>
        <div class="wrap">
        <input type="text" placeholder="Write your message..." id="message"/>
        <i class="fa fa-paperclip attachment" aria-hidden="true"></i>
        <button class="submit" id="send_message"><i class="fa fa-paper-plane" aria-hidden="true"></i></button>
        </div>
    </div>
<% } else {%>
    <div class="startmsg">
        <p>Start by adding a contact</p>
        <i class="fa fa-user-plus fa-fw" id="addcontacticon" aria-hidden="true" style="cursor:pointer"></i>
    </div>
    
<% }%>
</div>

